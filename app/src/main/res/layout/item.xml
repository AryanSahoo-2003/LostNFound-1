        <TextView
            android:id="@+id/place_lost_item"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#E6EAED"
            android:textSize="16sp"
            cardView:layout_constraintBottom_toTopOf="@+id/del_button"
            cardView:layout_constraintEnd_toEndOf="parent"
            cardView:layout_constraintHorizontal_bias="0.0"
            cardView:layout_constraintStart_toStartOf="@+id/mane_lost_item"
            cardView:layout_constraintTop_toBottomOf="@+id/mane_lost_item" />

        <TextView
            android:id="@+id/when_lost_item"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#C5F4E5"
            android:textStyle="italic"
            android:visibility="invisible"
            cardView:layout_constraintBottom_toTopOf="@+id/del_button"
            cardView:layout_constraintEnd_toEndOf="parent"
            cardView:layout_constraintStart_toEndOf="@+id/mane_lost_item"
            cardView:layout_constraintTop_toBottomOf="@+id/imgae_lost_item" />

        <!--        <androidx.cardview.widget.CardView-->
