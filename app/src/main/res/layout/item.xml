        <TextView
            android:id="@+id/keyword_lost_item"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="23dp"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/Background"
            android:textSize="18sp"
            android:textStyle="bold"
            cardView:layout_constraintBottom_toTopOf="@+id/mane_lost_item"
            cardView:layout_constraintEnd_toEndOf="parent"
            cardView:layout_constraintHorizontal_bias="0.0"
            cardView:layout_constraintStart_toStartOf="parent"
            cardView:layout_constraintTop_toBottomOf="@id/imgae_lost_item" />

        <TextView
            android:id="@+id/mane_lost_item"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/Background"
            android:textSize="16sp"
            android:textStyle="normal"
            cardView:layout_constraintBottom_toTopOf="@+id/place_lost_item"
            cardView:layout_constraintEnd_toEndOf="parent"
            cardView:layout_constraintHorizontal_bias="0.0"
            cardView:layout_constraintStart_toStartOf="@+id/keyword_lost_item"
            cardView:layout_constraintTop_toBottomOf="@+id/keyword_lost_item" />

        <ImageView
            android:id="@+id/imgae_lost_item"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_gravity="center"
            android:background="@color/Background"
            android:src="@drawable/ic_baseline_person_24"
            cardView:layout_constraintBottom_toTopOf="@+id/keyword_lost_item"
            cardView:layout_constraintEnd_toEndOf="parent"
            cardView:layout_constraintHorizontal_bias="0.589"
            cardView:layout_constraintStart_toStartOf="parent"
            cardView:layout_constraintTop_toTopOf="parent"
            cardView:layout_constraintVertical_bias="0.08" />
        <!--        </androidx.cardview.widget.CardView>-->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/del_button"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/saira_stencil_one"
            android:gravity="center"
            android:text="Claim it"
            android:textAlignment="center"
            android:textColor="#0080f5"
            android:textSize="15sp"
            android:textStyle="bold"
            cardView:cornerRadius="12dp"
            cardView:layout_constraintBottom_toTopOf="@+id/remove_button"
            cardView:layout_constraintEnd_toEndOf="parent"
            cardView:layout_constraintHorizontal_bias="0.5"
            cardView:layout_constraintStart_toStartOf="parent"
            cardView:layout_constraintTop_toBottomOf="@+id/place_lost_item" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/remove_button"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/saira_stencil_one"
            android:gravity="center"
            android:text="Delete Post"
            android:textAlignment="center"
            android:textColor="#0080f5"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone"
            cardView:cornerRadius="12dp"
            cardView:layout_constraintBottom_toTopOf="@+id/block_button"
            cardView:layout_constraintEnd_toEndOf="parent"
            cardView:layout_constraintHorizontal_bias="0.5"
            cardView:layout_constraintStart_toStartOf="parent"
            cardView:layout_constraintTop_toBottomOf="@+id/del_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/block_button"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/saira_stencil_one"
            android:gravity="center"
            android:text="Block user"
            android:textAlignment="center"
            android:textColor="#0080f5"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone"
            cardView:cornerRadius="12dp"
            cardView:layout_constraintBottom_toBottomOf="parent"
            cardView:layout_constraintEnd_toEndOf="parent"
            cardView:layout_constraintHorizontal_bias="0.5"
            cardView:layout_constraintStart_toStartOf="parent"
            cardView:layout_constraintTop_toBottomOf="@+id/remove_button" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="16sp"
            android:layout_height="16sp"
            cardView:layout_constraintBottom_toBottomOf="@+id/keyword_lost_item"
            cardView:layout_constraintEnd_toStartOf="@+id/keyword_lost_item"
            cardView:layout_constraintHorizontal_bias="0.0"
            cardView:layout_constraintStart_toStartOf="@+id/imgae_lost_item"
            cardView:layout_constraintTop_toTopOf="@+id/keyword_lost_item"
            cardView:srcCompat="@drawable/ic_baseline_assignment_turned_in_24" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="16sp"
            android:layout_height="16sp"
            cardView:layout_constraintBottom_toTopOf="@+id/place_lost_item"
            cardView:layout_constraintEnd_toStartOf="@+id/mane_lost_item"
            cardView:layout_constraintHorizontal_bias="0.0"
            cardView:layout_constraintStart_toStartOf="@+id/imageView5"
            cardView:layout_constraintTop_toTopOf="@+id/mane_lost_item"
            cardView:layout_constraintVertical_bias="0.571"
            cardView:srcCompat="@drawable/ic_baseline_person_24" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="16sp"
            android:layout_height="16sp"
            cardView:layout_constraintBottom_toBottomOf="@+id/place_lost_item"
            cardView:layout_constraintEnd_toStartOf="@+id/place_lost_item"
            cardView:layout_constraintHorizontal_bias="0.0"
            cardView:layout_constraintStart_toStartOf="@+id/imageView7"
            cardView:layout_constraintTop_toTopOf="@+id/place_lost_item"
            cardView:srcCompat="@drawable/ic_baseline_gps_fixed_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
