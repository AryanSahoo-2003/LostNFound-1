<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carView"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="8dp"

    cardView:cardCornerRadius="8dp"
    cardView:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/mane_lost_item"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:layout_marginStart="3dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#0E0E0E"
            android:textStyle="bold"
            cardView:layout_constraintBottom_toTopOf="@+id/keyword_lost_item"
            cardView:layout_constraintEnd_toEndOf="parent"
            cardView:layout_constraintHorizontal_bias="0.5"
            cardView:layout_constraintStart_toEndOf="@+id/imgae_lost_item"
            cardView:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/keyword_lost_item"
            android:layout_width="220dp"
            android:layout_height="31dp"
            android:layout_marginStart="3dp"
            android:text="TextView"
            android:textAlignment="center"
            cardView:layout_constraintBottom_toTopOf="@+id/place_lost_item"
            cardView:layout_constraintEnd_toEndOf="parent"
            cardView:layout_constraintHorizontal_bias="0.5"
            cardView:layout_constraintStart_toEndOf="@+id/imgae_lost_item"
            cardView:layout_constraintTop_toBottomOf="@+id/mane_lost_item" />

        <TextView
            android:id="@+id/place_lost_item"
            android:layout_width="220dp"
            android:layout_height="31dp"
            android:layout_marginStart="3dp"
            android:text="TextView"
            android:textAlignment="center"
            cardView:layout_constraintBottom_toTopOf="@+id/desc_lost_item"
            cardView:layout_constraintEnd_toEndOf="parent"
            cardView:layout_constraintHorizontal_bias="0.5"
            cardView:layout_constraintStart_toEndOf="@+id/imgae_lost_item"
            cardView:layout_constraintTop_toBottomOf="@+id/keyword_lost_item" />

        <TextView
            android:id="@+id/desc_lost_item"
            android:layout_width="220dp"
            android:layout_height="31dp"
            android:layout_marginStart="3dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#E91E63"
            android:textStyle="italic"
            cardView:layout_constraintBottom_toTopOf="@+id/del_button"
            cardView:layout_constraintEnd_toEndOf="parent"
            cardView:layout_constraintHorizontal_bias="0.5"
            cardView:layout_constraintStart_toEndOf="@+id/imgae_lost_item"
            cardView:layout_constraintTop_toBottomOf="@+id/place_lost_item" />

        <ImageView
            android:id="@+id/imgae_lost_item"
            android:layout_width="172dp"
            android:layout_height="185dp"
            cardView:layout_constraintBottom_toBottomOf="parent"
            cardView:layout_constraintStart_toStartOf="parent"
            cardView:layout_constraintTop_toTopOf="parent"
            cardView:layout_constraintVertical_bias="0.466"
            cardView:srcCompat="@drawable/ic_baseline_person_24" />

        <Button
            android:id="@+id/del_button"
            android:layout_width="85dp"
            android:layout_height="37dp"
            android:gravity="center"
            android:text="Delete"
            android:textSize="12dp"
            app:cornerRadius="20dp"
            cardView:layout_constraintBottom_toBottomOf="parent"
            cardView:layout_constraintEnd_toEndOf="parent"
            cardView:layout_constraintHorizontal_bias="0.5"
            cardView:layout_constraintStart_toEndOf="@+id/edit_button"
            cardView:layout_constraintTop_toTopOf="parent"
            cardView:layout_constraintVertical_bias="0.96" />

        <Button
            android:id="@+id/edit_button"
            android:layout_width="67dp"
            android:layout_height="37dp"
            android:text="Edit"
            android:textSize="12dp"
            app:cornerRadius="20dp"
            cardView:layout_constraintBottom_toBottomOf="parent"
            cardView:layout_constraintEnd_toStartOf="@+id/del_button"
            cardView:layout_constraintHorizontal_bias="0.5"
            cardView:layout_constraintStart_toEndOf="@+id/imgae_lost_item"
            cardView:layout_constraintTop_toBottomOf="@+id/desc_lost_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
